<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xht.lease.mapper.FeeKeyMapper">

    <resultMap id="FeeInfoList" type="com.xht.lease.vo.fee.FeeKeyVo">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="feeValueList" ofType="com.xht.lease.entity.FeeValue">
            <id property="id" column="value_id"/>
            <result property="name" column="value_name"/>
            <result property="unit" column="value_unit"/>
            <result property="feeKeyId" column="key_id"/>
        </collection>
    </resultMap>

    <select id="listFeeInfo" resultMap="FeeInfoList">
        select
            fk.id,
            fk.name,
            fv.id as value_id,
            fv.name as value_name,
            fv.unit as value_unit,
            fv.fee_key_id as key_id
        from fee_key fk
        left join fee_value fv on fk.id = fv.fee_key_id and fv.is_deleted =0
        where fk.is_deleted =0
    </select>
</mapper>
